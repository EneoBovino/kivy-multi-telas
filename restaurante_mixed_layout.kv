                    orientation: "horizontal"

                    Button:
                        size_hint_x: 0.7
                        text: "-"
                        on_press: root.decrementa_qtd_item()

                    TextInput:
                        id: qtd_item
                        text: "0"
                        font_size: 30
                        halign: "center"
                        valign: "middle"

                    Button:
                        size_hint_x: 0.7
                        text: "+"
                        on_press: root.incrementa_qtd_item()
                
                # Seleção do item
                Spinner:
                    size_hint_x: 2
                    id: itens_cardapio
                    text: 'Selecione'
                    values: root.cardapio_itens

            # Adiciona item
            Button:
                text: "Adiciona item"
                # on_press:
                #     root.inclui_pedido_na_lista()
            
        # Lista de itens
        Label:
            id: itens_pedido
            text: "Pedido:"
            valign: "top"
            text_size: self.size
            size_hint: 1, 0.4
            pos_hint: {"center_x": 0.5, "top": 0.6}

        # Layout Inferior
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint: 1, 0.2
            pos_hint: {"center_x": 0.5, "y": 0}
