                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                Label:
                    text: "Bar"

                CheckBox:
                    id: radio_bar
                    active: True
                    group: "pedido"
                    allow_no_selection: False
                    on_active: root.atualiza_lista_cardapio()

                Label:
                    text: "Cozinha"

                CheckBox:
                    id: radio_cozinha
                    active: False
                    group: "pedido"
                    allow_no_selection: False
                    on_active: root.atualiza_lista_cardapio()
            
